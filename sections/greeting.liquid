{% assign current_hour = 'now' | date: "%H" | plus: 0 %}

<div class="greeting-message" style="padding: 20px; font-size: 24px; font-weight: bold; text-align: center;">
  {% if current_hour < 12 %}
    Good Morning, Shopper!
  {% elsif current_hour < 18 %}
    Good Afternoon, Shopper!
  {% else %}
    Good Evening, Shopper!
  {% endif %}
</div>

{% schema %}
{
  "name": "Greeting",
  "settings": [],
  "presets": [
    {
      "name": "Greeting",
      "category": "Custom"
    }
  ]
}
{% endschema %}